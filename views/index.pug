doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Homework 5, CSC 305 Database Design, Fall 2025
    style.
      /* Indicate required elements */
      .flag { color: firebrick; }

      /* The required flag starts out as a red asterisk. */
      .flag::before {
        content: "*";
        padding-left: 2px;
      }

      /* Change the red * to a green check once the control has been filled in.*/
      :required:valid ~ .flag::before, .flag.valid::before {
        content: 'âœ“';
        color: green;
      }

      .graduation > input { margin-left: 2em; }

      ul {
        list-style-type: none;
        margin-top: 0;
      }

      div { margin-bottom: 0.5em; }

      .explanations { padding: 0; }

    
      table {
        border-collapse: collapse;
        margin-bottom: 2em;
        width: 100%;
      }

      table th, table td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
      }

      table th {
        background-color: #f0f0f0;
        font-weight: bold;
      }

  body
    //- Conditionally show the table if this is a POST request
    if showTable
      h2 Submitted Form Data
      table
        tr
          th Field Name
          th Value
        each val, key in formData
          tr
            td= key
            td= val
      hr

    //- The form from hw5-work.html without the Homework 5 header
    form(action="/" method="post" id="postform")
      fieldset
        div.inigo
          | "Hello! My name is
          input(name="nameblank" id="nameblank" required)
          | .
          span.flag
          | You killed my father. Prepare to die."
          sup
            a(id="ref1" href="#note1") 1
          | (Or not! ðŸ˜‡)
        
        div.email
          label(for="email") An email address (maybe mine, maybe not) is:
          input(name="email" id="email" type="email" required)
          span.flag
        
        div.graduation
          label I expect to graduate in:
          input(type="radio" name="grad-year" value="2023" id="grad-2023" required)
          label(for="grad-2023") 2023
          input(type="radio" name="grad-year" value="2024" id="grad-2024" required)
          label(for="grad-2024") 2024
          input(type="radio" name="grad-year" value="2025" id="grad-2025" required)
          label(for="grad-2025") 2025
          input(type="radio" name="grad-year" value="2026" id="grad-2026" required)
          label(for="grad-2026") 2026
          span.flag
        
        div.colors
          label I like foods of the following colors (check all that apply):
          span.flag
          ul
            li(style="background-color: plum")
              input(type="checkbox" name="Plum" value="Plum" id="Plum")
              label(for="Plum") Plum
            li(style="background-color: tomato")
              input(type="checkbox" name="Tomato" value="Tomato" id="Tomato")
              label(for="Tomato") Tomato
            li(style="background-color: wheat")
              input(type="checkbox" name="Wheat" value="Wheat" id="Wheat")
              label(for="Wheat") Wheat
            li(style="background-color: chocolate")
              input(type="checkbox" name="Chocolate" value="Chocolate" id="Chocolate")
              label(for="Chocolate") Chocolate
        
        input(type="reset" value="Reset")
        input(type="submit" value="Submit")
    
    //- Information about required and valid inputs
    ul.explanations
      li
        span.flag
        |  Required or invalid input (hover over control for explanation)
      li
        span.flag.valid
        |  Valid input
  
